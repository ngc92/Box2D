<rule>
	<pattern>object.structure.Engine.input:thrust</pattern>
	<type>gauge</type>
	<increase>38</increase>
	<decrease>40</decrease>
	<minimum>0</minimum>
	<maximum>1</maximum>
</rule>

<rule>
	<pattern>object.structure.Engine.input:turn</pattern>
	<type>button</type>
	<state>
		<key>37</key>
		<value>1</value>
	</state>
	<state>
		<key>39</key>
		<value>-1</value>
	</state>
	<default>0</default>
</rule>

<rule>
	<pattern>object.structure.Engine.input:afterburner</pattern>
	<type>gauge</type>
	<increase>65</increase>
	<decrease>66</decrease>
